---
interface Props {
	title?: string;
	subtitle?: string;
}

const { title = 'Godot Plugin Manager', subtitle = 'Addons simplified' } = Astro.props as Props;
---

<section class="mx-auto flex w-[calc(100%-2rem)] max-w-xl flex-col gap-2 text-center">
	<h1 class="text-3xl font-semibold tracking-tight text-slate-900 md:text-4xl">{title}</h1>
	<p class="text-lg font-semibold text-slate-900">{subtitle}</p>
</section>
