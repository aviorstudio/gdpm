<style is:global>
	:root {
		--accent: #478cbf;
		--ink: #0f172a;
		--muted: #475569;
		--surface: #ffffff;
		--panel: #f1f5f9;
		--border: #e2e8f0;
		--shadow: 0 8px 26px rgba(15, 23, 42, 0.06);
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body {
		background: #f5f6fa;
		color: var(--ink);
		min-height: 100vh;
		font-family: 'Inter', 'SF Pro Text', system-ui, -apple-system, sans-serif;
		line-height: 1.5;
	}

	.page {
		display: flex;
		justify-content: center;
		align-items: flex-start;
		padding: 48px 16px 72px;
	}

	.frame {
		width: min(640px, 100%);
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 20px;
		text-align: center;
	}

	.title {
		margin: 0;
		font-size: clamp(26px, 4vw, 36px);
		letter-spacing: -0.03em;
	}

	.headline {
		margin: 4px 0;
		color: var(--ink);
		font-weight: 600;
		font-size: 18px;
	}

	.lede {
		color: var(--muted);
		margin: 0 auto;
		max-width: 540px;
		line-height: 1.6;
	}

	.card {
		background: var(--surface);
		border: 1px solid var(--border);
		border-radius: 16px;
		padding: 18px;
		box-shadow: var(--shadow);
		width: min(520px, 100%);
	}

	.auth {
		display: grid;
		gap: 14px;
		align-self: stretch;
		text-align: left;
	}

	.toggle {
		display: inline-flex;
		background: var(--panel);
		border: 1px solid var(--border);
		border-radius: 999px;
		padding: 4px;
		gap: 6px;
	}

	.pill {
		border: none;
		background: transparent;
		color: var(--muted);
		padding: 9px 14px;
		border-radius: 999px;
		font-weight: 700;
		cursor: pointer;
		transition: all 0.15s ease;
	}

	.pill.active {
		background: var(--accent);
		color: #ffffff;
		box-shadow: none;
	}

	.field {
		display: grid;
		gap: 6px;
		color: #1e293b;
		font-size: 14px;
	}

	.field input {
		border-radius: 12px;
		border: 1px solid var(--border);
		padding: 12px 13px;
		background: #fff;
		color: var(--ink);
		font-size: 15px;
		outline: none;
		transition: border-color 0.2s ease, box-shadow 0.2s ease;
	}

	.field input:focus {
		border-color: var(--accent);
		box-shadow: 0 0 0 3px rgba(71, 140, 191, 0.18);
	}

	.cta {
		border: none;
		border-radius: 14px;
		padding: 13px 15px;
		font-weight: 800;
		color: #0b1625;
		background: linear-gradient(135deg, #6bb2e1, #478cbf);
		cursor: pointer;
		box-shadow: 0 10px 24px rgba(71, 140, 191, 0.18);
		transition: transform 0.15s ease, box-shadow 0.2s ease;
	}

	.cta:hover {
		transform: translateY(-1px);
		box-shadow: 0 12px 26px rgba(71, 140, 191, 0.2);
	}

	.cta:disabled,
	.ghost:disabled {
		opacity: 0.55;
		cursor: not-allowed;
	}

	.status {
		min-height: 20px;
		margin: 0;
		font-size: 14px;
		color: var(--muted);
	}

	.status strong {
		color: var(--ink);
	}

	.status[data-tone='error'] {
		color: #b91c1c;
	}

	.status[data-tone='success'] {
		color: #166534;
	}

	.auth[data-mode='signin'] [data-mode-visible='signup'] {
		display: none;
	}

	.auth[data-mode='signup'] [data-mode-visible='signin'] {
		display: none;
	}

	.main {
		text-align: left;
		display: grid;
		gap: 12px;
	}

	.main-header {
		display: flex;
		flex-direction: column;
		gap: 4px;
	}

	.signed-email {
		margin: 0;
		color: var(--muted);
	}

	.main-copy {
		margin: 0;
		color: var(--muted);
		line-height: 1.6;
	}

	.main-actions {
		display: flex;
		justify-content: flex-end;
	}

	.eyebrow {
		margin: 0;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		font-weight: 700;
		color: var(--accent);
		font-size: 12px;
	}

	.ghost {
		border-radius: 12px;
		border: 1px solid var(--border);
		background: #f8fafc;
		color: var(--ink);
		font-weight: 700;
		padding: 12px 13px;
		cursor: pointer;
		transition: background 0.15s ease, transform 0.15s ease, border-color 0.15s ease;
	}

	.ghost:hover {
		background: #eef4fb;
		border-color: #cbd5e1;
		transform: translateY(-1px);
	}

	@media (max-width: 960px) {
		.frame {
			align-items: stretch;
		}
	}

	@media (max-width: 640px) {
		.page {
			padding-top: 32px;
		}

		.card {
			padding: 16px;
		}
	}
</style>
