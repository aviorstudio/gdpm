---
export const prerender = false;

import RootLayout from '../../layouts/RootLayout.astro';
import Card from '../../components/Card.astro';
import Dialog from '../../components/Dialog.astro';
import Title from '../../components/Title.astro';
import Input from '../../components/Input.astro';
import { getSessionFromCookies } from '../../lib/auth';
import { orgsDto, orgsProfilesDto, usernamesDto } from '../../lib/dtoService';
import { supabase } from '../../lib/supabase';

type UsernameRecord = {
  username_display: string | null;
  user_id: string | null;
  org_id: string | null;
};

const safeDecodeURIComponent = (value: string) => {
  try {
    return decodeURIComponent(value);
  } catch {
    return value;
  }
};

const normalizeUsername = (value: string) => value.trim().toLowerCase();
const reservedUsernames = new Set([
  'signin',
  'register',
  'account',
  'api',
  '404',
  'robots.txt',
  'sitemap.xml',
  'favicon.ico',
  'favicon.svg',
]);
const isReservedUsername = (value: string) => reservedUsernames.has(value);

const usernameParamRaw = Astro.params.username ?? '';
const usernameParam = safeDecodeURIComponent(usernameParamRaw);
const usernameNormal = normalizeUsername(usernameParam);

const publicPath = Astro.url.pathname.replace(/\/settings\/?$/, '') || '/';

const session = await getSessionFromCookies(Astro.cookies);
if (!session) {
  return Astro.redirect(publicPath);
}

const profileId = session.user?.id ?? '';
if (!profileId || !usernameNormal) {
  return Astro.redirect(publicPath);
}

const { data: usernameRow, error: usernameError } = await usernamesDto.getByUsernameNormal(supabase, usernameNormal);
if (usernameError || !usernameRow) {
  return Astro.redirect(publicPath);
}

const usernameRecord = usernameRow as UsernameRecord;
if (!usernameRecord.user_id || usernameRecord.user_id !== profileId) {
  return Astro.redirect(publicPath);
}

const email = session.user?.email ?? '';
const usernameDisplay = usernameRecord.username_display || usernameParam;

let showCreateOrgDialog = Astro.url.searchParams.get('create_org') === '1';
let createOrgStatus = '';
let createOrgTone: 'muted' | 'error' | 'success' = 'muted';
let formOrgUsername = '';
let formOrgName = '';
let formOrgContactEmail = email;

if (Astro.request.method === 'POST') {
  showCreateOrgDialog = true;
  const formData = await Astro.request.formData();
  formOrgUsername = String(formData.get('org_username') ?? '').trim();
  formOrgName = String(formData.get('org_name') ?? '').trim();
  formOrgContactEmail = String(formData.get('contact_email') ?? '').trim() || email;

  const orgUsernameDisplay = formOrgUsername;
  const orgUsernameNormal = normalizeUsername(orgUsernameDisplay);
  const orgName = formOrgName || orgUsernameDisplay;
  const orgContactEmail = formOrgContactEmail || email;

  if (!orgUsernameNormal) {
    createOrgStatus = 'Organization username is required.';
    createOrgTone = 'error';
  } else if (isReservedUsername(orgUsernameNormal)) {
    createOrgStatus = 'That username is reserved.';
    createOrgTone = 'error';
  } else {
    const { data: existingUsername, error: existingUsernameError } = await usernamesDto.getByUsernameNormal(
      supabase,
      orgUsernameNormal
    );

    if (existingUsernameError) {
      createOrgStatus = existingUsernameError.message;
      createOrgTone = 'error';
    } else if (existingUsername) {
      createOrgStatus = 'That username is already taken.';
      createOrgTone = 'error';
    } else {
      const { data: createdOrg, error: orgError } = await orgsDto.insert(supabase, {
        name: orgName,
        ...(orgContactEmail ? { contact_email: orgContactEmail } : {}),
      });
      if (orgError) {
        createOrgStatus = orgError.message;
        createOrgTone = 'error';
      } else if (!createdOrg?.id) {
        createOrgStatus = 'Organization created but no id returned.';
        createOrgTone = 'error';
      } else {
        const { error: membershipError } = await orgsProfilesDto.insert(supabase, {
          org_id: createdOrg.id,
          user_id: profileId,
          admin: true,
        });

        if (membershipError) {
          createOrgStatus = membershipError.message;
          createOrgTone = 'error';
        } else {
          const { error: createUsernameError } = await usernamesDto.insert(supabase, {
            username_display: orgUsernameDisplay,
            username_normal: orgUsernameNormal,
            org_id: createdOrg.id,
          });

          if (createUsernameError) {
            createOrgStatus =
              createUsernameError.code === '23505' ? 'That username is already taken.' : createUsernameError.message;
            createOrgTone = 'error';
          } else {
            return Astro.redirect(`/@${encodeURIComponent(orgUsernameDisplay)}`);
          }
        }
      }
    }
  }
}
---

<RootLayout>
  <Title
    title="Settings"
    subtitle="Manage your profile details. Saving changes isnâ€™t wired up yet."
    action={{ href: '?create_org=1', label: 'Create org' }}
  />

  <Card class="flex flex-col gap-5">
    <div class="grid gap-4 md:grid-cols-2">
      <Input
        label="Display name"
        name="name"
        autocomplete="name"
        placeholder="Your name"
        type="text"
        value={usernameDisplay}
      />

      <Input
        label="Username"
        name="username"
        autocomplete="username"
        placeholder="your-handle"
        type="text"
        value={usernameDisplay}
      />

      <Input
        label="Email"
        name="email"
        autocomplete="email"
        type="email"
        value={email}
        readonly
        class="bg-slate-50"
        wrapperClass="md:col-span-2"
      />
    </div>

    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <a
        class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm font-semibold text-slate-800 shadow-sm transition hover:bg-slate-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-400"
        href={publicPath}
      >
        Back
      </a>
      <button
        class="inline-flex items-center justify-center rounded-xl bg-sky-600 px-4 py-3 text-sm font-semibold text-white shadow-sm opacity-60"
        type="button"
        disabled
      >
        Save changes
      </button>
    </div>

    <form class="flex justify-end" action="/api/auth/signout">
      <button
        class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-semibold text-slate-800 shadow-sm transition hover:bg-slate-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-400"
        type="submit"
      >
        Sign out
      </button>
    </form>
  </Card>

  <Dialog id="create-org-dialog" open={showCreateOrgDialog} title="Create an org" size="lg">
    <Fragment slot="description">Set up a new organization to publish plugins under.</Fragment>

    <form method="post" action={Astro.url.pathname} class="flex flex-col gap-4">
      <Input
        label="Org username"
        name="org_username"
        placeholder="my-awesome-studio"
        type="text"
        value={formOrgUsername}
        minlength="3"
        maxlength="32"
        required
      />

      <Input label="Org name" name="org_name" placeholder="My Awesome Studio" type="text" value={formOrgName} />

      <Input
        label="Contact email"
        name="contact_email"
        placeholder="team@example.com"
        type="email"
        autocomplete="email"
        value={formOrgContactEmail}
      />

      <p
        class:list={{
          'min-h-[20px] text-sm': true,
          'text-slate-500': createOrgTone === 'muted',
          'text-red-600': createOrgTone === 'error',
          'text-green-600': createOrgTone === 'success',
        }}
      >
        {createOrgStatus}
      </p>

      <div class="flex flex-col gap-3 sm:flex-row sm:justify-end">
        <a
          class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm font-semibold text-slate-800 shadow-sm transition hover:bg-slate-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-400"
          href={Astro.url.pathname}
        >
          Cancel
        </a>
        <button
          class="inline-flex items-center justify-center rounded-xl bg-sky-600 px-4 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-sky-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600"
          type="submit"
        >
          Create org
        </button>
      </div>
    </form>
  </Dialog>
</RootLayout>
