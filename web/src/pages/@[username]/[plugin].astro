---
export const prerender = false;

import RootLayout from '../../layouts/RootLayout.astro';
import Dialog from '../../components/Dialog.astro';
import Title from '../../components/Title.astro';
import PluginList from '../../components/PluginList.astro';
import Input from '../../components/Input.astro';
import { getSessionFromCookies, hasAuthCookies } from '../../lib/auth';
import { pluginVersionsDto, pluginsDto, usernamesDto } from '../../lib/dtoService';
import { toGitHubTreeUrl, toRepoUrl } from '../../lib/repo';
import { supabase } from '../../lib/supabase';

type UsernameRecord = {
  username_display: string | null;
  profile_id: string | null;
  org_id: string | null;
};

type PluginRecord = {
  id: string;
  name: string | null;
  repo: string | null;
  created_at: string | null;
};

type PluginVersionRecord = {
  plugin_id: string | null;
  version: string | null;
  sha: string | null;
  created_at: string | null;
};

const safeDecodeURIComponent = (value: string) => {
  try {
    return decodeURIComponent(value);
  } catch {
    return value;
  }
};

const normalizeUsername = (value: string) => value.trim().toLowerCase();

const usernameParamRaw = Astro.params.username ?? '';
const usernameParam = safeDecodeURIComponent(usernameParamRaw);
const usernameNormal = normalizeUsername(usernameParam);

const pluginParamRaw = Astro.params.plugin ?? '';
const pluginName = safeDecodeURIComponent(pluginParamRaw).trim();

const session = hasAuthCookies(Astro.cookies) ? await getSessionFromCookies(Astro.cookies) : null;
const profileId = session?.user?.id ?? '';

let pageTone: 'default' | 'not-found' | 'error' = 'default';
let pageStatus = '';
let ownerLabel = '';
let ownerSlug = encodeURIComponent(usernameParam);

let canCreateRelease = false;
let showCreateReleaseDialog = Astro.url.searchParams.get('create') === '1';
let createStatus = '';
let createTone: 'muted' | 'error' | 'success' = 'muted';

let formVersion = '';
let formSha = '';

if (showCreateReleaseDialog && !session) {
  return Astro.redirect('/signin');
}

let plugin: {
  id: string;
  name: string;
  repo: string;
  createdAt: string;
} | null = null;

let versions: Array<{
  version: string;
  sha: string;
  createdAt: string;
}> = [];

const notFound = () => {
  Astro.response.status = 404;
  pageTone = 'not-found';
  pageStatus = 'That plugin could not be found.';
};

if (!usernameNormal || !pluginName) {
  notFound();
} else {
  const { data: usernameRow, error: usernameError } = await usernamesDto.getByUsernameNormal(supabase, usernameNormal);

  if (usernameError) {
    Astro.response.status = 500;
    pageTone = 'error';
    pageStatus = usernameError.message;
  } else if (!usernameRow) {
    notFound();
  } else {
    const usernameRecord = usernameRow as UsernameRecord;
    const usernameDisplay = usernameRecord.username_display || usernameParam;
    ownerLabel = `@${usernameDisplay}`;
    ownerSlug = encodeURIComponent(usernameDisplay);

    const ownerProfileId = usernameRecord.profile_id;
    const ownerOrgId = usernameRecord.org_id;
    canCreateRelease = Boolean(ownerProfileId && profileId && ownerProfileId === profileId);

    if (showCreateReleaseDialog && !canCreateRelease) {
      Astro.response.status = 403;
      pageTone = 'error';
      pageStatus = 'You do not have permission to publish releases for this plugin.';
      showCreateReleaseDialog = false;
    }

    if (ownerProfileId && ownerOrgId) {
      Astro.response.status = 500;
      pageTone = 'error';
      pageStatus = 'Username is assigned to multiple owners.';
    } else if (!ownerProfileId && !ownerOrgId) {
      notFound();
    } else {
      const { data: pluginRow, error: pluginError } = ownerOrgId
        ? await pluginsDto.getByOrgIdAndName(supabase, ownerOrgId, pluginName)
        : await pluginsDto.getByProfileIdAndName(supabase, ownerProfileId ?? '', pluginName);

      if (pluginError) {
        Astro.response.status = 500;
        pageTone = 'error';
        pageStatus = pluginError.message;
      } else if (!pluginRow) {
        notFound();
      } else {
        const pluginRecord = pluginRow as PluginRecord;

        plugin = {
          id: pluginRecord.id,
          name: pluginRecord.name ?? pluginName,
          repo: pluginRecord.repo ?? '',
          createdAt: pluginRecord.created_at ?? '',
        };

        if (Astro.request.method === 'POST') {
          if (!session || !profileId) {
            return Astro.redirect('/signin');
          }

          showCreateReleaseDialog = true;

          if (!canCreateRelease) {
            Astro.response.status = 403;
            pageTone = 'error';
            createStatus = 'You do not have permission to publish releases for this plugin.';
            createTone = 'error';
          } else {
            const formData = await Astro.request.formData();
            formVersion = String(formData.get('version') ?? '').trim();
            formSha = String(formData.get('sha') ?? '').trim();

            if (!formVersion || !formSha) {
              createStatus = 'Version and sha are required.';
              createTone = 'error';
            } else {
              const { error: versionError } = await pluginVersionsDto.insert(supabase, {
                plugin_id: plugin.id,
                version: formVersion,
                sha: formSha,
              });

              if (versionError) {
                createStatus = versionError.message;
                createTone = 'error';
              } else {
                return Astro.redirect(Astro.url.pathname);
              }
            }
          }
        }

        const { data: versionRows, error: versionError } = await pluginVersionsDto.listByPluginId(supabase, plugin.id);
        if (versionError) {
          Astro.response.status = 500;
          pageTone = 'error';
          pageStatus = versionError.message;
        } else {
          versions = ((versionRows as PluginVersionRecord[] | null) ?? [])
            .map((row) => ({
              version: row.version ?? '',
              sha: row.sha ?? '',
              createdAt: row.created_at ?? '',
            }));
        }
      }
    }
  }
}

const ownerPath = `/@${ownerSlug}`;
const repoUrl = plugin?.repo ? toRepoUrl(plugin.repo) : '';
const repoLabel = repoUrl ? repoUrl.replace(/^https?:\/\//i, '') : '';
const versionList = versions.map((version) => ({
  pluginLabel: version.version || 'Unknown version',
  pluginHref: version.sha ? toGitHubTreeUrl(repoUrl, version.sha) : undefined,
  date: version.createdAt,
}));
---

<RootLayout>
  <Title
    title={pageTone === 'not-found' ? 'Not found' : undefined}
    titleParts={pageTone !== 'not-found'
      ? [
          { label: ownerLabel || `@${usernameParam}`, href: ownerPath },
          { label: plugin?.name || pluginName },
        ]
      : undefined}
    subtitle={pageTone === 'not-found'
      ? 'No plugin matches that URL.'
      : repoUrl ? undefined : 'No repository linked.'}
    subtitleLink={pageTone !== 'not-found' && repoUrl
      ? { href: repoUrl, label: repoLabel || plugin?.repo || repoUrl, external: true }
      : undefined}
    action={canCreateRelease && pageTone === 'default' ? { href: '?create=1', label: 'Create release' } : undefined}
  />

  <PluginList
    items={versionList}
    status={pageStatus}
    tone={pageTone === 'error' ? 'error' : 'muted'}
    hideBodyWhenError
    emptyTitle={pageTone === 'not-found' ? 'No matching plugin' : 'No versions yet'}
    emptySubtitle={pageTone === 'not-found'
      ? 'Double-check the URL and try again.'
      : 'This plugin has not published any versions.'}
  />

  {
    canCreateRelease && (
      <Dialog id="create-release-dialog" open={showCreateReleaseDialog} title="Create a release" size="lg">
        <Fragment slot="description">
          Publish a new release for this plugin.
        </Fragment>

	        <form method="post" action={Astro.url.pathname} class="space-y-4">
	          <div class="grid gap-4 md:grid-cols-2">
	            <Input
	              label="Version"
	              name="version"
	              placeholder="0.1.0"
	              type="text"
	              value={formVersion}
	              required
	            />

	            <Input
	              label="Sha"
	              name="sha"
	              placeholder="Git commit sha"
	              type="text"
	              value={formSha}
	              required
	            />
	          </div>

          <p
            class:list={{
              'min-h-[20px] text-sm': true,
              'text-slate-500': createTone === 'muted',
              'text-red-600': createTone === 'error',
              'text-green-600': createTone === 'success',
            }}
          >
            {createStatus}
          </p>

          <div class="flex flex-col gap-3 sm:flex-row sm:justify-end">
            <a
              class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm font-semibold text-slate-800 shadow-sm transition hover:bg-slate-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-400"
              href={Astro.url.pathname}
            >
              Cancel
            </a>
            <button
              class="inline-flex items-center justify-center rounded-xl bg-sky-600 px-4 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-sky-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600"
              type="submit"
            >
              Create release
            </button>
          </div>
        </form>
      </Dialog>
    )
  }
</RootLayout>
