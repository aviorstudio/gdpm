---
export const prerender = false;

import RootLayout from '../layouts/RootLayout.astro';
import { packageVersionsDto, packagesDto, usernamesDto } from '../lib/dtoService';
import { supabase } from '../lib/supabase';

type UsernameRecord = {
  username_display: string | null;
  profile_id: string | null;
  org_id: string | null;
};

type PackageRecord = {
  id: string;
  name: string | null;
  repo: string | null;
  created_at: string | null;
};

type PackageVersionRecord = {
  package_id: string;
  version: string | null;
  created_at: string | null;
};

const safeDecodeURIComponent = (value: string) => {
  try {
    return decodeURIComponent(value);
  } catch {
    return value;
  }
};

const normalizeUsername = (value: string) => value.trim().toLowerCase();

const usernameParamRaw = Astro.params.username ?? '';
const usernameParam = safeDecodeURIComponent(usernameParamRaw);
const usernameNormal = normalizeUsername(usernameParam);

let pageTone: 'default' | 'not-found' | 'error' = 'default';
let pageStatus = '';
let entityLabel = '';
let entitySlug = '';

let publishedPackages: Array<{
  id: string;
  slug: string;
  name: string;
  repo: string;
  createdAt: string;
  latestVersion: string;
}> = [];

if (!usernameNormal) {
  Astro.response.status = 404;
  pageTone = 'not-found';
  pageStatus = 'That user could not be found.';
} else {
  const { data: usernameRow, error: usernameError } = await usernamesDto.getByUsernameNormal(supabase, usernameNormal);

  if (usernameError) {
    Astro.response.status = 500;
    pageTone = 'error';
    pageStatus = usernameError.message;
  } else if (!usernameRow) {
    Astro.response.status = 404;
    pageTone = 'not-found';
    pageStatus = 'That user could not be found.';
  } else {
    const usernameRecord = usernameRow as UsernameRecord;
    const usernameDisplay = usernameRecord.username_display || usernameParam;

    const ownerProfileId = usernameRecord.profile_id;
    const ownerOrgId = usernameRecord.org_id;

    if (ownerProfileId && ownerOrgId) {
      Astro.response.status = 500;
      pageTone = 'error';
      pageStatus = 'Username is assigned to multiple owners.';
    } else if (!ownerProfileId && !ownerOrgId) {
      Astro.response.status = 404;
      pageTone = 'not-found';
      pageStatus = 'That user could not be found.';
    } else {
      entityLabel = `@${usernameDisplay}`;
      entitySlug = encodeURIComponent(usernameDisplay);

      const { data: packagesData, error: packagesError } = ownerOrgId
        ? await packagesDto.listByOrgId(supabase, ownerOrgId)
        : await packagesDto.listByProfileId(supabase, ownerProfileId ?? '');

      if (packagesError) {
        Astro.response.status = 500;
        pageTone = 'error';
        pageStatus = packagesError.message;
      } else {
        const packages = (packagesData as PackageRecord[] | null) ?? [];

        const latestVersionByPackageId = new Map<string, string>();
        if (packages.length > 0) {
          const packageIds = packages.map((pkg) => pkg.id);
          const { data: versionRows, error: versionError } = await packageVersionsDto.listByPackageIds(
            supabase,
            packageIds
          );
          if (versionError) {
            pageStatus = pageStatus || 'Unable to load package versions.';
          } else {
            for (const row of (versionRows as PackageVersionRecord[] | null) ?? []) {
              if (!latestVersionByPackageId.has(row.package_id)) {
                latestVersionByPackageId.set(row.package_id, row.version ?? '');
              }
            }
          }
        }

        publishedPackages = packages.map((pkg) => ({
          id: pkg.id,
          slug: pkg.name ?? '',
          name: pkg.name ?? 'Untitled package',
          repo: pkg.repo ?? '',
          createdAt: pkg.created_at ?? '',
          latestVersion: latestVersionByPackageId.get(pkg.id) ?? '',
        }));
      }
    }
  }
}
---

<RootLayout>
  <section class="flex justify-center px-4 py-12 md:py-16">
    <div class="w-full max-w-5xl space-y-6">
      <header class="flex flex-col gap-4 text-center sm:text-left md:flex-row md:items-end md:justify-between">
        <div class="space-y-2">
          <h1 class="text-3xl font-semibold tracking-tight text-slate-900 md:text-4xl">
            {pageTone === 'not-found' ? 'Not found' : entityLabel || `@${usernameParam}`}
          </h1>
          <p class="mx-auto max-w-3xl text-base text-slate-600 sm:mx-0">
            {pageTone === 'not-found'
              ? 'No user or organization owns that username.'
              : 'Packages published on GDPM.'}
          </p>
        </div>

        <div class="flex flex-col gap-2 sm:flex-row sm:justify-end">
          <a
            class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white px-4 py-3 text-sm font-semibold text-slate-800 shadow-sm transition hover:bg-slate-50 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-400"
            href="/signin"
          >
            Sign in
          </a>
          <a
            class="inline-flex items-center justify-center rounded-xl bg-sky-600 px-4 py-3 text-sm font-semibold text-white shadow-sm transition hover:bg-sky-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600"
            href="/register"
          >
            Register
          </a>
        </div>
      </header>

      <div class="w-full space-y-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        <div class="flex flex-col gap-1">
          <p class="text-xs font-semibold uppercase tracking-[0.12em] text-sky-600">Published packages</p>
          <div class="flex items-center justify-between text-sm text-slate-600">
            <p class="font-semibold text-slate-900">Packages</p>
            <p>{publishedPackages.length} total</p>
          </div>
        </div>

        {pageStatus && (
          <p
            class:list={{
              'text-sm font-medium': true,
              'text-red-600': pageTone === 'error',
              'text-slate-600': pageTone !== 'error',
            }}
          >
            {pageStatus}
          </p>
        )}

        {
          pageTone !== 'error' && publishedPackages.length === 0 ? (
            <div class="rounded-2xl border border-dashed border-slate-200 bg-slate-50 p-6 text-center">
              <p class="text-sm font-semibold text-slate-900">
                {pageTone === 'not-found' ? 'No matching owner' : 'No packages yet'}
              </p>
              <p class="mt-1 text-sm text-slate-600">
                {pageTone === 'not-found'
                  ? 'Double-check the username and try again.'
                  : 'This account has not published any packages.'}
              </p>
            </div>
          ) : pageTone === 'error' ? null : (
            <ul class="divide-y divide-slate-200">
              {
                publishedPackages.map((pkg) => (
                  <li class="flex flex-col gap-3 py-4 sm:flex-row sm:items-center sm:justify-between">
                    <div class="space-y-1">
                      {pkg.slug ? (
                        <a
                          class="text-sm font-semibold text-slate-900 hover:underline"
                          href={`/${entitySlug}/${encodeURIComponent(pkg.slug)}`}
                        >
                          {pkg.name}
                        </a>
                      ) : (
                        <p class="text-sm font-semibold text-slate-900">{pkg.name}</p>
                      )}
                      {pkg.repo && <p class="text-sm text-slate-600">{pkg.repo}</p>}
                    </div>
                    <div class="flex flex-wrap items-center gap-2 text-xs font-semibold">
                      <span class="rounded-full border border-slate-200 bg-white px-3 py-1 text-slate-700">
                        {pkg.latestVersion ? pkg.latestVersion : 'No versions'}
                      </span>
                      {pkg.createdAt && (
                        <span class="rounded-full border border-slate-200 bg-white px-3 py-1 text-slate-700">
                          <time datetime={pkg.createdAt}>{new Date(pkg.createdAt).toLocaleDateString()}</time>
                        </span>
                      )}
                    </div>
                  </li>
                ))
              }
            </ul>
          )
        }
      </div>
    </div>
  </section>
</RootLayout>
