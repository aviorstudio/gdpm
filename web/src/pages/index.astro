---
export const prerender = false;

import RootLayout from '../layouts/RootLayout.astro';
import PageHeader from '../components/PageHeader.astro';
import ReleaseList from '../components/ReleaseList.astro';
import { pluginVersionsDto, pluginsDto, usernamesDto } from '../lib/dtoService';
import { toGitHubTreeUrl, toRepoUrl } from '../lib/repo';
import { supabase } from '../lib/supabase';

type PluginRecord = {
  id: string;
  name: string | null;
  repo: string | null;
  created_at: string | null;
  profile_id: string | null;
  org_id: string | null;
};

type PluginVersionRecord = {
  plugin_id: string;
  version: string | null;
  sha: string | null;
  created_at: string | null;
};

type UsernameRecord = {
  username_display: string | null;
  profile_id: string | null;
  org_id: string | null;
};

let pluginsStatus = '';

const { data: pluginsData, error: pluginsError } = await pluginsDto.listAll(supabase);
if (pluginsError) pluginsStatus = pluginsError.message;

const plugins = (pluginsData as PluginRecord[] | null) ?? [];

const latestReleaseByPluginId = new Map<string, { version: string; sha: string; createdAt: string }>();
if (plugins.length > 0) {
  const pluginIds = plugins.map((plugin) => plugin.id);
  const { data: versionRows, error: versionError } = await pluginVersionsDto.listByPluginIds(supabase, pluginIds);
  if (!versionError) {
    for (const row of (versionRows as PluginVersionRecord[] | null) ?? []) {
      if (!latestReleaseByPluginId.has(row.plugin_id)) {
        latestReleaseByPluginId.set(row.plugin_id, {
          version: row.version ?? '',
          sha: row.sha ?? '',
          createdAt: row.created_at ?? '',
        });
      }
    }
  }
}

const profileIds = Array.from(new Set(plugins.map((plugin) => plugin.profile_id).filter(Boolean) as string[]));
const orgIds = Array.from(new Set(plugins.map((plugin) => plugin.org_id).filter(Boolean) as string[]));

const usernameByProfileId = new Map<string, string>();
if (profileIds.length > 0) {
  const { data: usernameRows, error: usernameError } = await usernamesDto.listByProfileIds(supabase, profileIds);
  if (!usernameError) {
    for (const row of (usernameRows as UsernameRecord[] | null) ?? []) {
      if (!row.profile_id || !row.username_display) continue;
      if (!usernameByProfileId.has(row.profile_id)) {
        usernameByProfileId.set(row.profile_id, row.username_display);
      }
    }
  }
}

const usernameByOrgId = new Map<string, string>();
if (orgIds.length > 0) {
  const { data: usernameRows, error: usernameError } = await usernamesDto.listByOrgIds(supabase, orgIds);
  if (!usernameError) {
    for (const row of (usernameRows as UsernameRecord[] | null) ?? []) {
      if (!row.org_id || !row.username_display) continue;
      if (!usernameByOrgId.has(row.org_id)) {
        usernameByOrgId.set(row.org_id, row.username_display);
      }
    }
  }
}

const pluginList = plugins.map((plugin) => {
  const ownerDisplay = plugin.profile_id
    ? usernameByProfileId.get(plugin.profile_id) ?? ''
    : plugin.org_id
      ? usernameByOrgId.get(plugin.org_id) ?? ''
      : '';
  const ownerPath = ownerDisplay ? `/@${encodeURIComponent(ownerDisplay)}` : '';
  const pluginSlug = plugin.name ?? '';
  const pluginPath = ownerDisplay && pluginSlug ? `${ownerPath}/${encodeURIComponent(pluginSlug)}` : '';
  const latestRelease = latestReleaseByPluginId.get(plugin.id);
  const repoUrl = plugin.repo ? toRepoUrl(plugin.repo) : '';
  const versionLabel = latestRelease?.version ? latestRelease.version : 'No versions';
  const treeUrl = latestRelease?.sha ? toGitHubTreeUrl(repoUrl, latestRelease.sha) : '';

  return {
    ownerLabel: ownerDisplay ? `@${ownerDisplay}` : undefined,
    ownerHref: ownerPath || undefined,
    pluginLabel: pluginSlug || 'Untitled plugin',
    pluginHref: pluginPath || undefined,
    metaLabel: versionLabel,
    metaHref: treeUrl || undefined,
    date: latestRelease?.createdAt || plugin.created_at || '',
  };
});
---

<RootLayout>
  <section class="flex justify-center px-4 py-12 md:py-16">
    <div class="w-full max-w-5xl space-y-6">
      <header class="flex flex-col gap-4 text-center sm:text-left md:flex-row md:items-end md:justify-between">
        <PageHeader title="All plugins" subtitle="Browse all addons" />
      </header>

      <div class="w-full space-y-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
        {pluginsStatus && <p class="text-sm font-medium text-red-600">{pluginsStatus}</p>}

        {
          pluginList.length === 0 ? (
            <div class="rounded-2xl border border-dashed border-slate-200 bg-slate-50 p-6 text-center">
              <p class="text-sm font-semibold text-slate-900">No plugins yet</p>
              <p class="mt-1 text-sm text-slate-600">
                Be the first to publish a Godot add-on.
              </p>
            </div>
          ) : (
            <ReleaseList items={pluginList} />
          )
        }
      </div>
    </div>
  </section>
</RootLayout>
